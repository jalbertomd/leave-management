@model leave_management.Models.CreateLeaveAllocationViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="SetLeave" asp-route-id="@item.Id" class="btn btn-outline-success">
                    <i class="fas fa-user-edit" aria-hidden="true"></i> Alocate to Employees
                </a> 
            </td>
        </tr>
}
    </tbody>
</table>
